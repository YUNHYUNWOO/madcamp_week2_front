<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/board_main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFDD00"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="아이디"
                            android:textSize="15dp"
                            android:maxLines="1"
                            android:layout_weight="5"
                            android:ellipsize="end"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/join_id_show"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:inputType="text"
                                android:layout_weight="4"
                                android:hint="id"/>
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/duplicate_id_check"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:background="@drawable/login_button_drawable"
                                android:layout_weight="1"
                                android:text="중복체크"
                                android:textSize="13dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="비밀번호"
                            android:textSize="15dp"
                            android:maxLines="1"
                            android:layout_weight="5"
                            android:ellipsize="end"/>
                        <EditText
                            android:id="@+id/join_password"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:inputType="text"
                            android:hint="password"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="비밀번호 확인"
                            android:textSize="15dp"
                            android:maxLines="1"
                            android:layout_weight="5"
                            android:ellipsize="end"/>
                        <EditText
                            android:id="@+id/join_password_correction"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:inputType="text"
                            android:hint="password check"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="별명"
                            android:textSize="15dp"
                            android:maxLines="1"
                            android:layout_weight="5"
                            android:ellipsize="end"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/join_nickname"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:inputType="text"
                                android:layout_weight="4"
                                android:hint="nickname"/>
                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/duplicate_nickname_check"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:background="@drawable/login_button_drawable"
                                android:layout_weight="1"
                                android:text="중복체크"
                                android:textSize="13dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="주소"
                            android:textSize="15dp"
                            android:maxLines="1"
                            android:layout_weight="5"
                            android:ellipsize="end"/>
                        <EditText
                            android:id="@+id/join_address"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:inputType="number"
                            android:hint="주소"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:orientation="vertical">
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/join_add_user"
                            android:layout_width="230dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:background="@drawable/login_button_drawable"
                            android:text="회원가입"
                            android:textSize="17dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>